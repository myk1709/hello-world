    <script>
        var drop1;
        var numOfGuesses = 1
        var systemGuess = 0;
        function myFunction()
         {
          drop1 = document.getElementById("drop").value; 
          console.log(drop1);
          while(systemGuess != drop1 ) 
         {
                var guess =Math.floor( Math.random() * 16 +1) ;
                 console.log(guess);
                if(drop1 == "choose a number"){
                   alert("please choose a number");
                   document.location.reload(true);
                   break;
                }
                else if(guess == drop1){
                    systemGuess = drop1;
                    alert("answer is right " + drop1 + " number of attemptes "+ numOfGuesses)
                    document.location.reload(true)
                }
                else{
                    numOfGuesses++;
                }
         }
        }
    </script>
